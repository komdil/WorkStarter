<Window x:Class="MouseCoordinationGetter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseCoordinationGetter"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Mouse coordination getter" Height="90" Width="450" >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Margin="10">
            <Label VerticalAlignment="Center" Content="X:" />
            <TextBox Name="XTextBox" VerticalContentAlignment="Center"  />
        </DockPanel>
        <DockPanel Grid.Column="1"  Margin="10">
            <Label VerticalAlignment="Center" Content="Y:" />
            <TextBox Name="YTextBox" VerticalContentAlignment="Center"  />
        </DockPanel>
        <Button Background="Red" Name="StartButton" Click="StartButton_Click" Content="Press ESC to stop"  Foreground="White" Margin="10" Grid.Column="2"/>
    </Grid>
</Window>
